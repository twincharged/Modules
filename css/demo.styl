$light = #fff

@font-face
    font-family: Raleway
    src: url(../fonts/Raleway/Raleway-Light.ttf)


html,
body
    background: rgb(20,20,20)
    text-align: center
    height: 100%
    overflow: hidden
    font-family: Raleway
    letter-spacing: 1px


.box
    position: relative
    margin: 10px 10px 10px 10px
    text-decoration: none
    line-height: 100px
    font-size: 22px
    cursor: pointer
    display: block
    color: $light
    height: 100px
    width: 200px
    &:hover
        text-decoration: none
        color: $light